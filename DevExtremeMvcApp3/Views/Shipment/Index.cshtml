@{
    string PageName = MainMenu.Shipment.PageName;
}
<div class="long-title"><h3>Danh sách @PageName</h3></div>

@(Html.DevExtreme().DataGrid<DevExtremeMvcApp3.Models.Shipment>()
.DataSource(ds => ds.WebApi()
.RouteName("ShipmentsAPIApi")
.LoadAction("Get")
.InsertAction("Post")
.UpdateAction("Put")
.DeleteAction("Delete")
.Key("ShipmentId")
)
.RemoteOperations(true)
.Columns(columns =>
{

 

columns.AddFor(m => m.IsFullShipment);

columns.AddFor(m => m.SalesOrderId);

columns.AddFor(m => m.ShipmentDate);

columns.AddFor(m => m.ShipmentName);

columns.AddFor(m => m.ShipmentTypeId);

columns.AddFor(m => m.WarehouseId);
}).Editing(e => e.Mode(GridEditMode.Popup)
.AllowAdding(true)
.AllowUpdating(true)
.AllowDeleting(true)
).Paging(p => p.PageSize(10))
.FilterRow(f => f.Visible(true))
.HeaderFilter(f => f.Visible(true))
.GroupPanel(p => p.Visible(true))
.Grouping(g => g.AutoExpandAll(false))
.RemoteOperations(true)
.Scrolling(scrolling => scrolling.ColumnRenderingMode(GridColumnRenderingMode.Virtual))
.Summary(s => s
.TotalItems(totalItems =>
{
totalItems.AddFor(m => m.ShipmentId).SummaryType(SummaryType.Count);
})
.GroupItems(groupItems =>
{
groupItems.Add().SummaryType(SummaryType.Count);
})
)
)